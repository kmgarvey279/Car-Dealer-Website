@using CarDealer.Models;

<h1>Car Dealer</h1>
<ul>

  @if (Model.Count == 0)
  {
    <p>You have no cars for sale</p>
  }
  @if (Model.Count != 0)
  {
    @foreach (Car car in Model)
    {
      <li>@car.GetMakeModel()</li>
        <ul>
          <li>@car.GetPrice()</li>
          <li>@car.GetMiles()</li>
        </ul>


    }
  }

</ul>
<a href="cars/new">Add another car.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Cars</button>
<form>
